<Window x:Class="Perceptron.OCR.UI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Perceptron - OCR - Optical Character Recognition" Height="350" Width="525">
    <Grid>
        <Grid x:Name="Pixels" Width="200" Height="200" Margin="102,12,101,99" />

        <Button x:Name="btExecute" Content="Execute" Height="35" HorizontalAlignment="Left" Margin="10,221,0,0" VerticalAlignment="Top" Width="130" Command="{Binding Path=ExecuteCommand}" />
        <Button x:Name="btClearWhite" Content="Clear white" Height="35" HorizontalAlignment="Center" Margin="0,221,0,0" VerticalAlignment="Top" Width="130" Command="{Binding Path=ClearWhiteCommand}" />
        <Button x:Name="btSwitchAll" Content="Switch all" Height="35" HorizontalAlignment="Right" Margin="0,221,10,0" VerticalAlignment="Top" Width="130" Command="{Binding Path=SwitchAllCommand}"  />

        <TextBlock Height="23" HorizontalAlignment="Left" Margin="45,271,0,0" Text="{Binding Path=Result}" VerticalAlignment="Top" Width="415" />
    </Grid>
</Window>
